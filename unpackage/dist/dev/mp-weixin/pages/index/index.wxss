.nav {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.nav .nav-item {
  width: 25%;
  text-align: center;
}
.nav .nav-item .iconfont {
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
  color: white;
  background-color: red;
  margin: 20rpx auto;
  line-height: 120rpx;
  font-size: 50rpx;
}
.hot-goods {
  background-color: #eee;
  overflow: hidden;
  margin: 10px 0;
}
.hot-goods .tit {
  font-size: 40rpx;
  color: red;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  letter-spacing: 40rpx;
  margin: 7px 0;
  background-color: #FFFFFF;
}
